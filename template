conky.text = [[
${execp curl -o ~/conky-yasno/yasno.pdf -f "$(cat ~/conky-yasno/.private_url.txt)"}
${execp chmod 644 ~/conky-yasno/yasno.pdf}
${execp pdftoppm -singlefile -png ~/conky-yasno/yasno.pdf ~/conky-yasno/yasno}
